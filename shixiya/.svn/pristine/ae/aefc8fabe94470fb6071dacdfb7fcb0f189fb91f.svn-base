*{padding: 0;margin: 0;font-family: 微软雅黑}
body,html{width: 100%; overflow: hidden;background-color: #f1f1f1;font-size: 10px}
input[type="button"], input[type="submit"], input[type="reset"],button{  -webkit-appearance: none;}
textarea{ -webkit-appearance: none;}

/*====== 登录 ======*/
.header{width: 100%;height: 50px;line-height: 50px;font-size: 2rem;text-align: center;background-color: snow}
.main{margin: 12px auto;padding-top: 30px;width: 90%}
.main>form>input{line-height: 3rem;width: 100%;}
input[type="text"]{border: 1px solid #e5e5e5!important;padding-left: 5px}
input[type="password"]{padding-left: 5px;border: 1px solid #e5e5e5;margin-bottom: 1.5rem}
input[type="submit"]{background-color: #83beff;display: block;font-size: 2rem;line-height: 4.5rem;border-radius: .8rem;color: #ffffff}
.main p{font-size: 1.5rem;color: #666;margin-top: 1.5rem;margin-left: 10px}